<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/time1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="今日の予定時間を入力してください"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/time2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="明日の予定時間を入力してください"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/time1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/time3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="2日後の予定時間を入力してください"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/time2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/time4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="3日後の予定時間を入力してください"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/time3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/time5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="4日後の予定時間を入力してください"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/time4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/time6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="5日後の予定時間を入力してください"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/time5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/time7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="6日後の予定時間を入力してください"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/time6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="numberDecimal"/>

    <Button
        android:id="@+id/camera_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="入力を確定して撮影する"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.833" />




</androidx.constraintlayout.widget.ConstraintLayout>